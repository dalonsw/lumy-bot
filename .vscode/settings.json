{
    // Mostra régua visual na coluna 72
    "editor.rulers": [72],

    // Usa 4 espaços por indentação (padrão do Python)
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Ativa formatação ao salvar
    "editor.formatOnSave": true,

    // Configura Black como formatador Python
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "72"
    ],
}
